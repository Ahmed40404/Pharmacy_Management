<Window x:Class="PharmacyManagement.create_user"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmacyManagement"
        mc:Ignorable="d"
        Title="create_user" Height="500" Width="850">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/حقن.jpg"/>
        </Grid.Background>
        <TextBox TabIndex="0" x:Name="usernamet" Width="200" Height="70" FontSize="35" Margin="300,79,300,285" Background="#00000000"/>
        <TextBox TabIndex="1" x:Name="Pathological_condition" Width="200" Height="70" FontSize="35" Margin="300,154,300,210" Background="#00000000"/>
        <Button TabIndex="2" FontSize="29" x:Name="login" Content="create" Width="100" Height="60" Margin="350,282,350,92" Background="#00000000" Foreground="#FF090000" Click="login_Click"/>
        <RadioButton Content="Loyalty" HorizontalAlignment="Center" x:Name="radio" Height="29" Margin="0,229,0,0" VerticalAlignment="Top" Width="144" FontSize="20"/>
    </Grid>
</Window>
